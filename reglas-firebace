rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      // Allow the authenticated user to read their own document, or a document
      // whose `email` field matches the signed-in user's email. Writes only
      // allowed by the owner (uid).
      allow read: if request.auth != null && (
        request.auth.uid == uid ||
        // resource may not exist on get; allow if resource.data.email equals auth email
        (resource.data.email == request.auth.token.email)
      );
      allow write: if request.auth.uid == uid;
    }
    match /proyectos/{uid} {
      allow read, write: if request.auth.uid == uid;
    }
    match /proyectos-publicos/{uid} {
      allow read: if true;
      allow write: if request.auth.uid == uid;
    }
  }
}